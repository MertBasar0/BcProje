<div class="container">
  <div class="row">
    <div class="col">
      <partial name="~/Views/Customer/Partials/CreateCustomer.cshtml"></partial>
    </div>
    <div class="col">

      @*<partial name="~/Views/Customer/Partials/GetAllCustomers.cshtml" model=@Model></partial>*@

        <table class="table">
            <form>
            <thead>
               <tr>
                    <th scope="col">#</th>
                    <th scope="col">Şirket İsmi</th>
                    <th scope="col">Bölge</th>
                    <th scope="col">Ünite Sayısı</th>
                    <th scope="col">Urun Ekle</th>
               </tr>
            </thead>
            <tbody>
                @{
                    foreach(var item in (List<Customer>)TempData["list"])
                        {
                            <tr>
                                <th scope="row"></th>
                                <td>@item.Name</td>
                                <td>@item.Region</td>
                                <td>@item.UnitCount</td>
                                <td>
                                <div class=mb-3>
                                    <button type="submit" class="btn btn-success" asp-controller="CustomerProduct" asp-action="Index" name="customerId" value=@item.CustomerId>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="25" fill="currentColor" class="bi bi-arrow-right-circle-fill" viewBox="0 0 16 16">
                                            <path d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0zM4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z"/>
                                        </svg>
                                    </button>
                                </div>
                                
                                </td>
                            </tr>
                        }
                  }
            </tbody>
            </form>
        </table>
    </div>
  </div>